@model IEnumerable<WebApplication2.Models.Product>

<div class="container">
    <div class="categories">
        <div class="row">
            <div class="col-3">
                <img src="~/imagess/category-one.png" alt="" class="img-categories">
            </div>
            <div class="col-3">
                <img src="~/imagess/category-2.jpg" alt="" class="img-categories">
            </div>
            <div class="col-3">
                <img src="~/imagess/category4.jpg" alt="" class="img-categories">
            </div>
        </div>
    </div>
</div>

<h2 id="product" class="title">Products Display</h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4">
                    <img src="@item.ImageUrl" alt="" class="card-img-top img-container">
                    <form class="overlay" asp-controller="Product" asp-action="Display" asp-route-id="@item.Id">
                        <button class="btn btn-primary btn-details">Xem chi tiết</button>
                    </form>
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Price)$</p>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                        <form class="form-add-to-cart" asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <div class="input-group">
                                <label for="quantity" class="mr-2">Số lượng:</label>
                                <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" style="width: 100px;" />
                                <div class="input-group-append added-to-cart">
                                    <button class="btn btn-info btn-add-to-cart" type="submit">Thêm vào giỏ hàng</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
