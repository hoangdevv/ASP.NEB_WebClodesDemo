@model IEnumerable<WebApplication2.Models.Product>

<div class="container">
    <div class="categories">
        <div class="row">
            <div class="col-3">
                <img src="~/imagess/category-one.png" alt="" class="img-categories">
            </div>
            <div class="col-3">
                <img src="~/imagess/category-2.jpg" alt="" class="img-categories">
            </div>
            <div class="col-3">
                <img src="~/imagess/category4.jpg" alt="" class="img-categories">
            </div>
        </div>
    </div>
</div>

<h2 class="title">Products Display</h2>
<div class="row">
    @foreach (var item in Model)
    {
       <div class="col-4">
            <img src="@item.ImageUrl" alt="" class="img-container">
            <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
            <p>@Html.DisplayFor(modelItem => item.Price)$</p>
            <div class="rating">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-o"></i>

            </div>
            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="form-inline">
                <input type="hidden" name="productId" value="@item.Id" />
                <div class="input-group">
                    <label for="quantity" class="mr-2">Số lượng:</label>
                    <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" style="width: 100px;" />
                    <div class="input-group-append">
                        <button class="btn btn-info" type="submit">Thêm vào giỏ hàng</button>
                    </div>
                </div>
            </form>
       </div>
    }
</div>

