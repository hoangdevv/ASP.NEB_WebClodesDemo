@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-controller="Product" asp-action="Add">Create New</a>
</p>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card p-2 m-2" style="width: 100%;">
                    @if (item.ImageUrl != null)
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="Product Image">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Price)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Category.Name)</p>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
