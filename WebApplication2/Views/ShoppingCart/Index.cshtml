@model ShoppingCart
<!DOCTYPE html>
<html>
<head>
    <title>Giỏ Hàng Của Bạn</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        .remove-link {
            color: #c00;
            text-decoration: none;
        }

            .remove-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h2>Giỏ Hàng Của Bạn</h2>
    <table>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Số tiền</th>
            <th>Tổng tiền</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <a class="remove-link btn btn-info" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" method="post">Remove</a>
                </td>
            </tr>
        }
    </table>

    <div>
        <a class="btn btn-info" asp-action="Checkout">Thanh toán</a>
        <a class="btn btn-info" asp-controller="Product" asp-action="Index">Trở về</a>
    </div>
    
</body>
</html>
