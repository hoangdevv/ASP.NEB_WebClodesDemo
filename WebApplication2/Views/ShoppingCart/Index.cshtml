@model ShoppingCart
@{
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Giỏ Hàng Của Bạn</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        .remove-link {
            color: #c00;
            text-decoration: none;
        }

            .remove-link:hover {
                text-decoration: underline;
            }

        .quantity-input {
            display: flex;
            align-items: center;
        }

        .quantity {
            width: 50px;
            text-align: center;
        }

        .minus-btn,
        .plus-btn {
            background-color: #ccc;
            border: none;
            cursor: pointer;
            padding: 5px;
        }

            .minus-btn:hover,
            .plus-btn:hover {
                background-color: #999;
                color: #fff;
            }
    </style>
</head>
<body>
    <div style="display:flex; justify-content:space-between; align-items:center; padding: 8px">
        <h2>Giỏ Hàng Của Bạn</h2>
        <a asp-controller="Order" asp-action="OrderHistory">
            Lịch sử đặt hàng
            <i style="width: 30px" class="fa-solid fa-clock-rotate-left"></i>
        </a>
    </div>
    
    <table>
        <tr>
            <th>Hinh</th>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Số tiền</th>
            <th>Tổng tiền</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td><img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="max-width: 100px; max-height: 100px;" /></td>
                <td>@item.Name</td>
                <td>
                    <div class="quantity-input">
                        <form asp-controller="ShoppingCart" asp-action="UpdateQuantity" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" class="quantity" name="quantity" value="@item.Quantity" min="1" max="100" />
                            <button type="submit">Cập nhật</button>
                        </form>
                    </div>
                </td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <a class="remove-link btn btn-info" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" method="post">Remove</a>
                </td>
            </tr>
        }
    </table>

    <div>
        <a class="btn btn-back" asp-controller="Product" asp-action="Index">Trở về</a>
        <a class="btn btn-info" asp-action="Checkout">Thanh toán</a>
    </div>

</body>
</html>
